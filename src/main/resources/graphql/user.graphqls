type User {
  id: ID!
  username: String!
  email: String!
}

input UserBean {
  username: String!
  email: String!
  password: String!
}

input AuthenticationBean {
  email: String!
  password: String!
}

enum UserRole{
  ADMIN
  TEACHER
  STUDENT
}

type Query {
  login(auth: AuthenticationBean!) : String!
  findUser(id: ID!): User
  findLoggedUser: User!
  findRole(institutionId: ID!) : UserRole!
}

type Mutation {
  createUser(userBean: UserBean!) : User
}