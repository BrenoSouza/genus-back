type Discussion {
  id: ID!
  title: String!
  creator: User!
  subject: Subject!
  creationDate: String!
  lastUpdatedDate: String!
  replies: [Reply!]!
  replyNumber: Int!
}

input DiscussionCreationInput {
  title: String!
  subjectId: ID!
  content: String!
}

extend type Mutation {
  createDiscussion (input: DiscussionCreationInput!) : Discussion!
}
