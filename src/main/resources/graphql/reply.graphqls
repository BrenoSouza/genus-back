type Reply {
  id: ID!
  content: String!
  date: String!
  user: User!
  discussion: Discussion!
}

input ReplyCreationInput {
  content: String!
  forumPostId: ID!
}

input UpdateReplyInput {
  replyId: ID!
  content: String
}

extend type Mutation {
  createReply (input: ReplyCreationInput!) : Reply!
  removeReply (replyId: ID!) : Boolean 
  updateReply (input: UpdateReplyInput): Reply
}