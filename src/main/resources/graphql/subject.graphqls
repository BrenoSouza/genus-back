type Subject {
  id: ID!
  grade: Grade!
  name: String!
  teachers: [ User! ]!
}

input SubjectCreationInput {
  gradeId: ID!
  name: String!
}

extend type Query {
  findSubject (input: ID!) : Subject
  findSubjectsByGrade(gradeId: ID!): [ Subject! ]!
  findTeachers(subjectId: ID!): [ User! ]!
}

extend type Mutation {
  createSubject (input: SubjectCreationInput!) : Subject
  addTeacherToSubject (subjectId: ID!, teacherId: ID!) : Subject
}