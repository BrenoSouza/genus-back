type ForumPost {
  id: ID!
  title: String!
  creator: User!
  subject: Subject!
  creationDate: String!
  lastUpdatedDate: String!
  replies: [ForumReply!]!
  replyNumber: Int!
}

input ForumPostCreationInput {
  title: String!
  subjectId: ID!
  content: String!
}

extend type Mutation {
  createForumPost (input: ForumPostCreationInput!) : ForumPost!
}
